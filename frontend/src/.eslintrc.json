{
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },

  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "plugins": [
    "react",
    "import",
    "jsx-a11y"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    },
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "react/prop-types": 0,
    "react/no-unused-prop-types": 0,
    "react/no-unescaped-entities": 0,
    "indent": [
      "error",
      2
    ],
    "semi": "error",
    "linebreak-style": 1,
    "quotes": [
      "error",
      "double"
    ],
    "no-undef": "error",
    "no-unused-vars": "error",
    "no-console": ["error", { "allow": ["warn", "error"] }]
  }
}
